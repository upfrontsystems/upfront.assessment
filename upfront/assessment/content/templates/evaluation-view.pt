<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="upfront.assessment">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="content-core">

       <h1 i18n:translate="heading_evaluation">Evaluation</h1>

       <p>XXX: Add name of learner once Relations are fixed</p>

        <tal:evaluations tal:condition="not:view/evaluation_table">
            <div i18n:translate="message_no_evaluation_data">Evaluation contains no data</div>
        </tal:evaluations>

        <form name="update-evaluation-form" tal:attributes="action string:${view/__name__}" method="post">

            <div id="div-evaluation-table-listing">
                <tal:listing tal:condition="view/evaluation_table">
                    <table id="assessment-listing" class="rating">
                        <tr>
                            <th>Activity UID</th>
                            <th>Rating</th>
                        </tr>
                        <tr tal:repeat="item view/evaluation_table">
                            <td tal:content="item/uid"></td>
                            <td>
                                <table class="ratingsheet">      
                                    <tr>
                                       <input type="hidden" id="assessmentitem_" value="d239bd34b281a5eb92fb3460f697ca63"  
                                               name="assessmentitem_7fae3b4d99793b14d3998d6b740b9efc:ignore_empty">
                                        <td class="answer" tal:attributes="selected_answer python:item['rating'] == 1">
                                            <span>1</span>&nbsp;&nbsp;
                                        </td>                                  
                                        <td class="answer" tal:attributes="selected_answer python:item['rating'] == 2">
                                            <span>2</span>&nbsp;&nbsp;
                                        </td>
                                        <td class="answer" tal:attributes="selected_answer python:item['rating'] == 3">
                                            <span>3</span>&nbsp;&nbsp;
                                        </td>   
                                        <td class="answer" tal:attributes="selected_answer python:item['rating'] == 4">
                                            <span>4</span>&nbsp;                                            
                                        </td>
                                        <td class="answer_red" tal:attributes="selected_answer_red python:item['rating'] == 0">
                                            <span>Not rated</span>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </tal:listing>
            </div>

            <input id="buttons-update-evaluation-submit" name="buttons.update.evaluation.submit"
                   value="Save" type="submit">

        </form>

    </tal:main-macro>
</metal:main>

</body>
</html>
